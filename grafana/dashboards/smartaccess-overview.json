{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Events Processed (rate/min)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "rate(smartaccess_events_processed_total[1m]) * 60",
          "legendFormat": "{{status}}"
        }
      ]
    },
    {
      "title": "HTTP Request Duration (p95)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(smartaccess_http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "p95"
        }
      ]
    },
    {
      "title": "Devices by Status",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "smartaccess_devices_total",
          "legendFormat": "{{status}}"
        }
      ]
    },
    {
      "title": "DLQ Size",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 8 },
      "targets": [
        { "expr": "smartaccess_dlq_events_total" }
      ]
    },
    {
      "title": "Outbox Pending",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 12 },
      "targets": [
        { "expr": "smartaccess_outbox_pending_total" }
      ]
    },
    {
      "title": "PG Pool Active Connections",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 12, "y": 8 },
      "targets": [
        { "expr": "smartaccess_pg_pool_active" }
      ]
    },
    {
      "title": "Backend Uptime (hours)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 8 },
      "targets": [
        { "expr": "smartaccess_uptime_seconds / 3600" }
      ]
    }
  ],
  "schemaVersion": 39,
  "tags": ["smartaccess", "iot"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "title": "SmartAccess Overview",
  "uid": "smartaccess-overview"
}
